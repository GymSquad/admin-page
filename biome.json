{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["src/**/*.gen.ts"]
  },
  "formatter": {
    "enabled": true,
    "ignore": ["src/**/*.gen.ts"],
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "ignore": ["src/**/*.gen.ts"],
    "rules": {
      "recommended": true,
      "a11y": {
        "useButtonType": "off"
      }
    }
  }
}
